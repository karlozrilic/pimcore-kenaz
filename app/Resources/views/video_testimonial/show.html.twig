{% extends 'layout.html.twig' %}
{% block head %}
    {% if editmode %}
        {{parent()}}
    {% endif %}
{% endblock %}
{% block navigation %}
{% endblock %}
{% block content %}

{% if editmode %}
<div class="list-of-testimonials">
    {% for el in array %}
    <div class="video-testimonial tab-{{ loop.index  }} z-ind-{{ loop.index }}">
        <p>{{ el.getDescription("en")|truncate(35, '...') }}</p>
        <div class="video">
            <video autoplay muted loop class="testimonial-video">
                <source src="{{ el.getVideo().getData()|raw }}">
            </video>
            <div class="buttons">
                <button class="video-play-button"><i class="material-icons-two-tone">play_circle</i></button>
            </div>
            <div class="about">
                <img src="{{ el.getAuthor().getProfileImage().getThumbnail('authorImageTestimonial') }}" alt="Author image" />
                <div class="author-info">
                    <div class="name">
                        <span>Answered by:</span>
                        {{ el.getAuthor().getFirstName() }}
                    </div>
                    <div class="job-title">Job title</div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% else %}
<div class="testimonials">
    {% for el in array %}
    <div class="video-testimonial tab-{{ loop.index  }} z-ind-{{ loop.index }}">
        <p>{{ el.getDescription("en")|truncate(35, '...') }}</p>
        <div class="video">
            <video {% if loop.index == 1 %}autoplay{% endif %} muted loop class="testimonial-video">
                <source src="{{ el.getVideo().getData()|raw }}">
            </video>
            <div class="buttons">
                <button class="video-play-button"><i class="material-icons">play_circle_outline</i></button>
            </div>
            <div class="about">
                <img src="{{ el.getAuthor().getProfileImage().getThumbnail('authorImageTestimonial') }}" alt="Author image" />
                <div class="author-info">
                    <div class="name">
                        <span>Answered by:</span>
                        {{ el.getAuthor().getFirstName() }}
                    </div>
                    <div class="job-title">Job title</div>
                </div>
            </div>
        </div>
    </div>
    <div class="video-testimonial-modal out">
        {% set customSettings = el.getVideo().getData().getCustomSettings() %}
        <div class="modal-content {% if customSettings['videoWidth'] > customSettings['videoHeight'] %}width{% else %}height{% endif %}">
            <button class="close modal-close"><i class="material-icons">close</i></button>
            <h3 class="description">
                {{ el.getDescription("en") }}
            </h3>
            <div class="content">
                <video controls autoplay class="modal-video">
                    <source src="{{ el.getVideo().getData()|raw }}">
                </video>
            </div>
            <div class="author">
                <img src="{{ el.getAuthor().getProfileImage().getThumbnail('authorImageTestimonialBigger') }}" alt="Author image" />
                <div class="author-info">
                    <div class="name">
                        {{ el.getAuthor().getFirstName() }}
                        {{ el.getAuthor().getLastName() }}
                    </div>
                    <div class="job-title">Job title</div>
                </div>
            </div>
            <div class="modal-tags">
            {% for category in el.getCategory() %}
                <a class="tag-pill" href="{{ path(category) }}">{{ category.getTitle() }}</a>
            {% endfor %}
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
{% block footer %}
{% endblock %}
{% block headscripts deferred %}
{% endblock %}