{% extends 'layout.html.twig' %}
{% block head %}
    {% if view.editmode %}
        {{parent()}}
    {% endif %}
{% endblock %}
{% block navigation %}
{% endblock %}
{% block content %}
    <div class="video-testemonial">
        <p>{{ video_testemonial.getDescription() }}</p>
        <div class="video">
            <video autoplay muted loop>
                <source src="{{ video_testemonial.getVideo().getData()|raw }}">
            </video>
            <div class="buttons">
                <button class="video-play-button" id="open-modal"><i class="material-icons">play_circle_outline</i></button>
            </div>
            <div class="about">
                <img src="{{ video_testemonial.getAuthor().getProfileImage().getThumbnail('authorImageTestemonial') }}" alt="Author image" />
                <div class="author-info">
                    <div class="name">
                        <span>Answered by:</span>
                        {{ video_testemonial.getAuthor().getFirstName() }}
                    </div>
                    <div class="job-title">Job title</div>
                </div>
            </div>
        </div>
    </div>
    <div class="video-testemonial-modal out" id="modal">
        <div class="modal-content">
            <button class="close" id="modal-close"><i class="material-icons">close</i></button>
            <h3 class="description">
                {{ video_testemonial.getDescription() }}
            </h3>
            <div class="content">
                <video controls autoplay id="video">
                    <source src="{{ video_testemonial.getVideo().getData()|raw }}">
                </video>
            </div>
            <div class="author">
                <img src="{{ video_testemonial.getAuthor().getProfileImage().getThumbnail('authorImageTestemonialBigger') }}" alt="Author image" />
                <div class="author-info">
                    <div class="name">
                        {{ video_testemonial.getAuthor().getFirstName() }}
                        {{ video_testemonial.getAuthor().getLastName() }}
                    </div>
                    <div class="job-title">Job title</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}
{% block headscripts deferred %}
{% endblock %}